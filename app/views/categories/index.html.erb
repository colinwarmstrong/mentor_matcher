<header class='category-index-header'>
  <div>Categories</div>
</header>

<a class="btn btn-primary btn-lg btn-block" id='add-new-skill-button' href="<%= new_category_path %>">Create New Category</a>

<% @categories.each do |category| %>
  <h4><%= link_to category.title, category_path(category) %></h4>
  <p><%= category.description %></p>
<% end %>
