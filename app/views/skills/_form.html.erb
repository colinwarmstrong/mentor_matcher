<%= form_for [@user, @skill] do |f| %>
  <%= f.label 'Category' %>
  <%= f.collection_select :category_id, Category.order(:title), :id, :title, include_blank: true %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.submit 'Add Skill' %>
<% end %>
